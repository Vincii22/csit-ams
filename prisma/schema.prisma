generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  STUDENT
  OFFICER
}

enum Year {
  FIRST @map("First-Year Student")
  SECOND @map("Second-Year Student")
  THIRD  @map("Third-Year Student")
  FOURTH @map("Fourth-Year Student")
}

enum Position {
  PRESIDENT
  IVP
  EVP
  SEC_GEN
  SEC_ASS
  TREASURER
  TREASURER_ASS
  AUDITOR
  BS_HAN
  PRO
  IT_REP
  CS_REP
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  verifiedAt DateTime
  role Role @default(STUDENT)
}

model Course {
  id String @id @default(uuid())
  course String
  students Student[]
}

model Student {
  id String @id @default(uuid())
  schoolId String
  courseId String
  year Year
  course Course @relation(fields: [courseId], references: [id])
}

model Officer {
  id String @id @default(uuid())
  position Position
}

