generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN @map("Admin")
  STUDENT @map("Student")
  OFFICER @map("Officer")
}

model User {
  id         String   @id
  name       String
  email      String   @unique
  verifiedAt DateTime
  role       Role     @default(STUDENT)
  student Student? 
}

model Course {
  id       String    @id @default(uuid())
  course   String
  abbreviation String @unique
  students Student[]
}

model Position {
  id String @id @default(uuid())
  title String
  students Student[]
}

model Student {
  id       String @id
  schoolId String
  courseId String
  positionId String?
  year     Int
  course   Course @relation(fields: [courseId], references: [id])
  position Position? @relation(fields: [positionId], references: [id])
  user User @relation(fields: [id], references: [id])
}

